<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="@dimen/height_phoneNumber"
    android:paddingLeft="@dimen/paddingLR_phoneNumber"
    android:paddingRight="@dimen/paddingLR_phoneNumber">

    <TextView
        android:id="@+id/tv_phoneName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:text="测试文本"
        android:textSize="@dimen/font_h3_size" />

    <ImageView
        android:id="@+id/iv_arrowRight"
        android:layout_width="@dimen/hw_png"
        android:layout_height="@dimen/hw_png"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/arrow_right" />

    <TextView
        android:id="@+id/tv_phoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@+id/iv_arrowRight"
        android:text="测试文本"
        android:textSize="@dimen/font_h3_size" />

</RelativeLayout>